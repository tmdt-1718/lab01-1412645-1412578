<% if !flash[:error].nil? %>
<div class="alert alert-danger" role="alert">
  <span><%= flash[:error] %></span>
</div>
<% end %>
<%= form_with scope: :user, url: user_index_path, local: true, method: :post do |form| %>
<div class="form-group">
	<label for="name">Tên</label>
	<%= form.text_field :name, id: "name", class: "form-control" %>
</div>
<div class="form-group">
	<label for="username">Tên đăng ký</label>
	<%= form.text_field :username, id: "username", class: "form-control" %>
</div>
<div class="form-group">
	<label for="password">Mật khẩu</label>
	<%= form.password_field :password, id: "password", class: "form-control" %>
</div>
	<button type="submit" class="btn btn-primary">Đăng ký</button>
<% end %>